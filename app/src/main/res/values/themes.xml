<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KedaTechAndroidCatalog" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <style name="Theme.KedaTechAndroidCatalog" parent="Base.Theme.KedaTechAndroidCatalog" />

    <style name="DialogFragmentBlur" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSecondary">@color/white</item>
    </style>

</resources>